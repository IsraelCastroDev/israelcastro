---
import Button from "./Button.astro";
import Typography from "./Typography.astro";
---

<section
  id="Contacto"
  class="scroll-mt-24 my-20 h-[calc(100vh-80px] md:h-[calc(100vh-250px)] flex items-center justify-center flex-col gap-y-3"
>
  <div>
    <Typography
      as="p"
      variant="big"
      color="gradient"
      class:list={["text-center font-black"]}
      >¡Te invito a ponerte en contacto conmigo!</Typography
    >

    <Typography
      as="p"
      variant="text"
      color="secondary"
      class:list={["text-center mt-2 font-black"]}
    >
      Actualmente me encuentro disponible para trabajar.</Typography
    >
  </div>

  <div class="flex flex-col items-center justify-center">
    <Button className="mt-4 px-10 py-3" href="/contacto">
      Haz click aquí
    </Button>
  </div>
</section>
