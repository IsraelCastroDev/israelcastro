---
import Button from "./Button.astro";
import Typography from "./Typography.astro";
import ModalContacto from "./ui/ModalContacto.astro";
---

<section
  id="Contacto"
  class="scroll-mt-24 my-20 h-[calc(100vh-80px] md:h-[calc(100vh-250px)] flex items-center justify-center flex-col gap-y-3"
>
  <div>
    <Typography
      as="p"
      variant="big"
      color="gradient"
      class:list={["text-center font-black"]}
      >¡Te invito a ponerte en contacto conmigo!</Typography
    >

    <Typography
      as="p"
      variant="text"
      color="secondary"
      class:list={["text-center mt-2 font-black"]}
    >
      Actualmente me encuentro disponible para trabajar.</Typography
    >
  </div>

  <div class="flex flex-col items-center justify-center">
    <Button className="btn-modal mt-4 px-10 py-3" href="#">
      Haz click aquí
    </Button>
  </div>
  <ModalContacto />
</section>

<script>
  const btnModal = document.querySelectorAll(
    ".btn-modal"
  ) as NodeListOf<HTMLElement>;
  const btnCloseModal = document.getElementById("closeModalBtn") as HTMLElement;
  const modal = document.querySelector(".modal") as HTMLElement;
  const form = document.getElementById("form-contact") as HTMLFormElement;

  btnModal?.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      e.preventDefault();
      modal?.classList.add("modal--show");
    });
  });

  btnCloseModal?.addEventListener("click", () => {
    modal?.classList.remove("modal--show");
    form?.reset();
  });
</script>
