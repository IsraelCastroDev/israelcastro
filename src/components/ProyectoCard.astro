---
import type { Proyecto } from "@/Types";
import Typography from "./Typography.astro";

interface Props {
  proyecto: Proyecto;
}

const { proyecto } = Astro.props;
---

<article class="bg-gray-800 p-3 rounded-xl flex flex-col gap-y-2">
  <img
    src={proyecto.img}
    alt={`Imagen del proyecto ${proyecto.name}`}
    title={`Imagen del proyecto ${proyecto.name}`}
    class="w-full block rounded-xl"
    loading="lazy"
    decoding="async"
  />

  <div>
    <Typography as="h3" variant="small" color="secondary" class:list={"mt-2"}>
      {proyecto.name}
    </Typography>

    <Typography as="p" variant="text" color="secondary">
      {proyecto.description}
    </Typography>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex items-center gap-2 bg-gray-700 p-2 rounded-xl">
      {
        proyecto.technologies?.map((tech) => (
          <img
            src={`/icons/${tech}.svg`}
            alt={`Icono de la tecnologÃ­a ${tech}`}
            class="w-5 h-5 block"
            loading="lazy"
            decoding="async"
          />
        ))
      }
    </div>

    <div class="flex gap-2 items-center justify-center">
      <img
        src="/icons/link.svg"
        alt="Ir al proyecto"
        title="Ir al proyecto"
        class="block"
        loading="lazy"
        decoding="async"
      />
      <Typography
        as="a"
        target={"_blank"}
        variant={"text"}
        color="secondary"
        href={proyecto.url}
        class:list={"mb-0 hover:underline"}>Ir al proyecto</Typography
      >
    </div>
  </div>
</article>
