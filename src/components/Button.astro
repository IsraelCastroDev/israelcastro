---
import Typography from "./Typography.astro";

interface Props {
  href: string;
  className: string;
}

const { href, className } = Astro.props;
---

<Typography
  href={href}
  as="a"
  variant="small"
  color="secondary"
  class:list={[
    `bg-blue-900 hover:bg-blue-800 transition-colors duration-500 ease-in-out rounded-full font-black ${className}`,
  ]}
>
  <slot />
</Typography>
