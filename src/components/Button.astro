---
import Typography from "./Typography.astro";

interface Props {
  href: string;
  className: string;
}

const { href, className } = Astro.props;
---

<Typography
  href={href}
  as="a"
  variant="small"
  color="secondary"
  class={`bg-blue-900 rounded-full font-black ${className}`}
>
  <slot />
</Typography>
