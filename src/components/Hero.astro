---
import Typography from "./Typography.astro";
---

<section
  id="Hero"
  class="scroll-mt-24 flex justify-center items-center flex-col gap-y-5 h-[calc(100vh-80px)]"
>
  <div class="flex flex-col justify-center items-center gap-y-2 text-center">
    <Typography
      as="h1"
      variant="big"
      color="gradient"
      class:list={["text-wrap w-[90%] md:w-[100%] tracking-tight hero__title"]}
    >
      Israel Castro</Typography
    >
    <Typography
      as="h2"
      variant="mediun"
      color="gradient"
      class:list={["hero__subtitle text-wrap"]}
    >
      Desarrollador Frontend Jr.</Typography
    >
  </div>
  <div class="flex gap-x-2 md:gap-x-4 items-center justify-center hero__button">
    <a href="https://www.linkedin.com/in/juan-castro-chozo/" target="_blank">
      <img
        src="/icons/Linkedin.svg"
        alt="Linkedin de Israel Castro"
        title="Linkedin de Israel Castro"
        class="w-8 md:w-10"
      />
    </a>
    <a href="https://github.com/IsraelCastroDev" target="_blank">
      <img
        src="/icons/Github.svg"
        alt="Github de Israel Castro"
        class="w-8 md:w-10"
        title="Github de Israel Castro"
      />
    </a>
  </div>
</section>

<style>
  .hero__title {
    animation: fadeintop 0.8s ease-in-out;
  }

  .hero__subtitle {
    animation: fadeintop 1.3s ease-in-out;
  }

  .hero__button {
    animation: fadeintop 1.8s ease-in-out;
  }

  @keyframes fadeintop {
    0% {
      opacity: 0;
      transform: translateY(-40%);
    }
    50% {
      opacity: 0;
      transform: translateY(-20%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
