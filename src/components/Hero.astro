---
import Button from "./Button.astro";
import Typography from "./Typography.astro";
---

<section
  id="Hero"
  class="scroll-mt-24 flex justify-center items-center flex-col gap-y-5 h-[calc(100vh-80px)]"
>
  <div class="flex flex-col justify-center items-center gap-y-2 text-center">
    <Typography
      as="h1"
      variant="big"
      color="gradient"
      class:list={["text-wrap w-[90%] md:w-[100%] tracking-tight hero__title"]}
    >
      Israel Castro</Typography
    >
    <Typography
      as="h2"
      variant="mediun"
      color="gradient"
      class:list={["hero__subtitle"]}
    >
      Desarrollador Frontend Jr.</Typography
    >
  </div>
  <Button href="#Proyectos" className="py-3 px-2 hero__button">Conoce m√°s de mi</Button>
</section>

<style>
  .hero__title {
    animation: fadeintop .8s ease-in-out;
  }

  .hero__subtitle {
    animation: fadeintop 1.3s ease-in-out;
  }

  @keyframes fadeintop {
    0% {
      opacity: 0;
      transform: translateY(-40%);
    }
    50% {
      opacity: 0;
      transform: translateY(-20%); 
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
