---
import Typography from "./Typography.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import BadgeButton from "./ui/BadgeButton.astro";
---

<section
  id="Hero"
  class="scroll-mt-24 flex justify-center flex-col gap-y-5 h-[calc(100vh-2rem)] max-w-3xl mx-auto"
>
  <div class="flex flex-col justify-center gap-y-2">
    <Typography
      as="h1"
      variant="big"
      color="gradient"
      class:list={["text-wrap w-full md:w-[100%] tracking-tight hero__title"]}
    >
      Israel Castro</Typography
    >
    <Typography
      as="p"
      variant="mediun"
      color="gradient"
      class:list={["hero__subtitle text-wrap"]}
    >
      1 año de experiencia. Desarrollador web, resido en Perú. Disponible para
      trabajar.
    </Typography>
  </div>

  <div class="flex gap-x-2 md:gap-x-4 items-center hero__button mt-3">
    <a
      href="https://github.com/IsraelCastroDev"
      target="_blank"
      referrerpolicy="no-referrer"
    >
      <BadgeButton color="slate">
        <GithubIcon className="h-6 w-6" />
        Github
      </BadgeButton>
    </a>

    <a
      href="https://www.linkedin.com/in/juan-castro-chozo/"
      target="_blank"
      referrerpolicy="no-referrer"
    >
      <BadgeButton color="sky">
        <LinkedinIcon className="h-6 w-6" />
        Linkedin
      </BadgeButton>
    </a>
  </div>
</section>

<style>
  .hero__title {
    animation: fadeintop 0.8s ease-in-out;
  }

  .hero__subtitle {
    animation: fadeintop 1.3s ease-in-out;
  }

  .hero__button {
    animation: fadeintop 1.8s ease-in-out;
  }

  @keyframes fadeintop {
    0% {
      opacity: 0;
      transform: translateY(-40%);
    }
    50% {
      opacity: 0;
      transform: translateY(-20%);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
